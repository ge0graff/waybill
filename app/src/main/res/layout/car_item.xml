<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_items_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/car_item_consumption_summer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0,0"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_item_consumption_summer"
            app:layout_constraintStart_toEndOf="@+id/car_item_consumption_summer"
            app:layout_constraintTop_toTopOf="@+id/car_item_consumption_summer"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Автомобиль:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_consumption_summer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Летний расход:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/car_item_car_name"
            app:layout_constraintTop_toBottomOf="@+id/car_item_car_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_consumption_winter_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0,0"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_item_consumption_winter"
            app:layout_constraintStart_toEndOf="@+id/car_item_consumption_winter"
            app:layout_constraintTop_toTopOf="@+id/car_item_consumption_winter"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_mileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="00000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_item_car_name"
            app:layout_constraintStart_toEndOf="@+id/car_item_car_name"
            app:layout_constraintTop_toTopOf="@+id/car_item_car_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_fuel_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="00000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_item_mileage"
            app:layout_constraintStart_toEndOf="@+id/car_item_mileage"
            app:layout_constraintTop_toTopOf="@+id/car_item_mileage"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/car_item_consumption_winter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Зимний расход:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_item_consumption_summer_value"
            app:layout_constraintStart_toEndOf="@+id/car_item_consumption_summer_value"
            app:layout_constraintTop_toTopOf="@+id/car_item_consumption_summer_value"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>